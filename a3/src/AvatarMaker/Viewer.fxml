                                            <image>
                                                <Image url="@../resources/skin/skin_lighter.png"/>
                                            </image>
                                            <cursor>
                                                <Cursor fx:constant="HAND"/>
                                            </cursor>
                                        </ImageView>
                                    </children>
                                </AnchorPane>
                            </content>
                        </TitledPane>
                        <TitledPane fx:id="browChoose" minWidth="200.0" prefWidth="200.0" text="Eyebrows">
                            <content>
