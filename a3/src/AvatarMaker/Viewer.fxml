                    </children>
                </StackPane>
                <AnchorPane fx:id="cmdPane" minWidth="200.0" prefWidth="200.0" HBox.hgrow="NEVER">
                    <children>
                        <ColorPicker fx:id="colorPicker" layoutX="27.0" layoutY="84.0" visible="false"/>
                        <Button fx:id="savePNGButton" layoutX="56.0" layoutY="359.0" mnemonicParsing="false"
                                text="Save as PNG" AnchorPane.bottomAnchor="10.0"/>
                        <Button fx:id="loadAvatarButton" layoutX="59.0" layoutY="272.0" mnemonicParsing="false"
                                text="Load Avatar" AnchorPane.bottomAnchor="90.0"/>
                        <Button fx:id="saveAvatarButton" layoutX="59.0" layoutY="320.0" mnemonicParsing="false"
                                text="Save Avatar" AnchorPane.bottomAnchor="50.0"/>
                        <Spinner fx:id="spinner" editable="true" layoutX="103.0" layoutY="14.0" prefHeight="27.0"
                                 prefWidth="84.0" visible="false" AnchorPane.rightAnchor="10.0"
                                 AnchorPane.topAnchor="10.0"/>
                        <Label fx:id="spinnerLabel" layoutX="14.0" layoutY="10.0" prefHeight="27.0" prefWidth="89.0"
                               text="Vertical  offset:" visible="false" AnchorPane.leftAnchor="10.0"
                               AnchorPane.topAnchor="10.0"/>
                    </children>
                </AnchorPane>
            </children>
